{
  "name": "vscode-sops-editor",
  "publisher": "kabolt",
  "displayName": "@kabolt/vscode-spos",
  "description": "Vscode extension for encrypt and decrypt files with sops on the fly ",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kabolt/vscode-sops"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.101.0"
  },
  "activationEvents": [
    "workspaceContains:.sops.yaml",
    "onLanguage:yaml",
    "onLanguage:json",
    "onLanguage:dotenv"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sops.encryptFile",
        "title": "SOPS: Encrypt File",
        "category": "SOPS"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "sops.encryptFile",
          "when": "!resourceLangId.sops",
          "group": "sops"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.101.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
