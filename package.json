{
  "name": "vscode-sops-editor",
  "publisher": "kabolt",
  "displayName": "@kabolt/vscode-spos",
  "description": "Vscode extension for encrypt and decrypt files with sops on the fly ",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/kabolt/vscode-sops"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.101.0"
  },
