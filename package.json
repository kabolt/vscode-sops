    "onLanguage:yaml",
    "onLanguage:json",
    "onLanguage:dotenv"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.101.0",
    "typescript": "^5.0.0"
  }
}
